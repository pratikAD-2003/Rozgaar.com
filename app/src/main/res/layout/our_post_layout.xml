<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:padding="@dimen/_5sdp"
    android:background="@drawable/ms_layout">

    <ImageView
        android:id="@+id/work_ms"
        android:layout_width="@dimen/_158sdp"
        android:layout_height="@dimen/_120sdp"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/work_title_ms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/work_ms"
        android:layout_marginTop="@dimen/_2sdp"
        android:paddingLeft="@dimen/_8sdp"
        android:text="xxxxxxxxx"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/work_des_ms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/work_title_ms"
        android:layout_marginTop="@dimen/_2sdp"
        android:paddingLeft="@dimen/_8sdp"
        android:text="student must know "
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/work_location_ms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/work_des_ms"
        android:layout_marginTop="@dimen/_2sdp"
        android:paddingLeft="@dimen/_8sdp"
        android:text="New market,Bhopal"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold" />


</RelativeLayout>