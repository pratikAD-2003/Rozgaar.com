<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/OffWhite">

    <LinearLayout
        android:id="@+id/sender_LL"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp"
        android:background="@drawable/msg_style"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/sender_play_btn"
            android:layout_width="@dimen/_35sdp"
            android:src="@drawable/play_button"
            android:layout_height="@dimen/_35sdp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/sender_time"
        android:visibility="gone"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_toStartOf="@+id/sender_LL"
        android:layout_alignBottom="@+id/sender_LL"
        android:layout_alignTop="@+id/sender_LL"
        android:textSize="@dimen/_8sdp"/>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/receiver_LL"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp"
        android:background="@drawable/msg_style"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/receiver_play_btn"
            android:layout_width="@dimen/_35sdp"
            android:src="@drawable/play_button"
            android:layout_height="@dimen/_35sdp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/receiver_audio_time"
        android:visibility="gone"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_toEndOf="@+id/receiver_LL"
        android:layout_alignBottom="@+id/receiver_LL"
        android:layout_alignTop="@+id/receiver_LL"
        android:textSize="@dimen/_8sdp"/>

</RelativeLayout>