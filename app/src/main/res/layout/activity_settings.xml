<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/OffWhite"
    android:layout_height="match_parent"
    tools:context=".settings">

    <LinearLayout
        android:id="@+id/HJDHIUJ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@color/purple"
        android:elevation="@dimen/_20sdp"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:id="@+id/back_from_settings"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:src="@drawable/back_64px"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_15sdp"
            android:text="@string/settings"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/_5sdp"
        android:layout_below="@+id/HJDHIUJ"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/changeLanguage_btn"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/main_screen_layout"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:src="@drawable/language"
                android:layout_height="@dimen/_20sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:text="@string/change_language"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/logoutBtn"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/main_screen_layout"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:src="@drawable/logout"
                android:layout_height="@dimen/_20sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="@string/logout"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/invite_friend"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/main_screen_layout"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:src="@drawable/share"
                android:layout_height="@dimen/_20sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="@string/share_invite"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>