<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup_page"
    tools:context=".LoginSignup.login_with_otp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.619">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/otp_verification"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dfaufj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_5sdp"
                android:text="@string/mobile_number_text"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/enter_mobile_number"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_below="@+id/dfaufj"
                android:inputType="number"
                android:layout_gravity="center"
                android:background="@drawable/edittext_box"
                android:paddingLeft="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />
        </RelativeLayout>


        <Button
            android:id="@+id/get_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/login_btn"
            android:text="@string/get_otp_text" />

        <TextView
            android:id="@+id/show_mobile_number"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/otp_layout"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/one_otp"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/edittext_box"
                android:maxLength="1"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/two_otp"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/edittext_box"
                android:maxLength="1"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/three_otp"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/edittext_box"
                android:maxLength="1"
                android:textColor="@color/black"
                android:inputType="number"
                android:textSize="@dimen/_15sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/four_otp"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/edittext_box"
                android:maxLength="1"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/five_otp"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/edittext_box"
                android:maxLength="1"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/six_otp"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/edittext_box"
                android:maxLength="1"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/resend_otp_login"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/resend_otp"
            android:textColor="#9C0E03"
            android:textStyle="bold" />

        <Button
            android:visibility="invisible"
            android:id="@+id/login_btn_with_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/login_btn"
            android:text="@string/login_btn" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <TextView
                android:id="@+id/other_ways_to_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/other_ways_text"
                android:textColor="@color/black" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>