<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:background="@color/OffWhite">

    <TextView
        android:visibility="gone"
        android:id="@+id/sender_msg"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/_5sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/msg_style"
        android:text="Hello"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/sender_msg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sender_msg"
        android:layout_alignBottom="@+id/sender_msg"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_toStartOf="@+id/sender_msg"
        android:gravity="center_vertical"
        android:text="12:30"
        android:textColor="@color/black"
        android:textSize="@dimen/_8sdp"
        android:visibility="gone" />

    <TextView
        android:visibility="gone"
        android:id="@+id/receiver_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:background="@drawable/msg_style"
        android:layout_alignParentStart="true"
        android:text="Hello"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/receiver_msg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/receiver_msg"
        android:layout_alignBottom="@+id/receiver_msg"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_toEndOf="@+id/receiver_msg"
        android:gravity="center_vertical"
        android:text="12:30"
        android:textColor="@color/black"
        android:textSize="@dimen/_8sdp"
        android:visibility="gone" />

</RelativeLayout>